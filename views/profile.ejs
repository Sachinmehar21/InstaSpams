<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
      <div class="nav flex justify-between items-center px-4">
        <h3 class="text-4xl font-bold transform translate-y-3 px-1"><%= user.username %></h3>
        <div class="icons flex gap-5">
          <a href="/upload"><i class="text-[1.4rem] ri-image-add-line"></i></a>
        </div>
      </div>
      <div class="flex justify-between items-center pr-[4.5vw] mt-8">
        <div class="w-[23vw] h-[23vw] mx-4 rounded-full overflow-hidden">
          <img class="w-full h-full" src="/images/upload/<%= user.pic%>" alt="">
        </div>
        <div class="stats flex gap-5 items-center justify-between">
          <div class="flex flex-col items-center justify-center font-bold">
            <h3 class="text-2xl"><%= user.posts.length %></h3>
            <h4>Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center font-bold">
            <h3 class="text-2xl" ><%= user.followers.length%> </h3>
            <h4>Followers</h4>
          </div>
          <div class="flex flex-col items-center justify-center font-bold">
            <h3 class="text-2xl" ><%= user.following.length%></h3>
            <h4>Following</h4>
          </div>
        </div>
        
      </div>
      <div class="dets px-6 mt-5">
        <h3 class="text-3xl mb-1"><%= user.name%></h3>
        <p class="text-s tracking-tight opacity-50"><%=  user.bio ?? 'Add bio'%>
        </p>
      </div>
      <div class="px-5 mt-5 ">
        <button class="rounded-lg">
        <a class="rounded-lg px-3 py-4 bg-zinc-800 text-s" href="/edit">Edit Profile</a></button>
      </div>
      <div class="posts mx-1 w-full flex justify-start gap-1 py-2 mt-5 flex-wrap">
      <%if(user.posts.length > 0){%>
        <%user.posts.reverse().forEach(function(post){%>
          <div class="post w-[32.5%] h-[32.5%] border-2 border border-black rounded-md overflow-hidden">
            <img class="w-full h-full" src="../images/upload/<%=post.pic%>" alt="">
          </div>          
          <%})%>
          <%}else{%>
            <p class="w-full text-center opacity-50">Create your first post !</p>
            <%}%>
      </div>
  </div>
<% include ./partials/footer.ejs %>
